  <!-- Toast -->
  <div id="toast" class="toast" role="status" aria-live="polite"></div>

  <script>
    // Contract copy button
    (function(){
      const contract = '4Q8cSV7b8EteHr59BYCPaTWrqTdPa45vacxGPUA1pump';
      const copyBtn = document.getElementById('copyContract');
      const contractText = document.getElementById('contractText');
      const toast = document.getElementById('toast');

      copyBtn.addEventListener('click', async function(){
        try {
          await navigator.clipboard.writeText(contract);
          showToast('Contract address copied to clipboard');
        } catch(e){
          // fallback
          const ta = document.createElement('textarea');
          ta.value = contract;
          document.body.appendChild(ta);
          ta.select();
          document.execCommand('copy');
          ta.remove();
          showToast('Contract address copied (fallback)');
        }
      });

      function showToast(msg){
        toast.innerText = msg;
        toast.classList.add('show');
        setTimeout(()=> toast.classList.remove('show'), 2200);
      }
    })();

    // Lightning canvas animation
    (function(){
      const canvas = document.getElementById('lightning-canvas');
      const ctx = canvas.getContext('2d');
      let w = canvas.width = innerWidth;
      let h = canvas.height = innerHeight;
      const dpr = Math.min(2, window.devicePixelRatio || 1);
      canvas.width = Math.floor(w * dpr);
      canvas.height = Math.floor(h * dpr);
      canvas.style.width = w + 'px';
      canvas.style.height = h + 'px';
      ctx.scale(dpr, dpr);

      // lightning parameters
      const bolts = [];
      function rand(min, max){ return Math.random()*(max-min)+min; }

      function createBolt(){
        const startX = rand(0, w);
        const startY = rand(0, h * 0.2); // start near top
        const endX = rand(0, w);
        const endY = rand(h * 0.2, h * 0.9);
        const life = rand(220, 480); // ms visible
        bolts.push({
          x0: startX, y0: startY,
          x1: endX, y1: endY,
          t: performance.now(),
          life: life,
          branches: generateBranches(startX,startY,endX,endY)
        });
      }

      function generateBranches(x0,y0,x1,y1){
        const segs = [];
        const steps = Math.floor(rand(6,14));
        let prevX = x0, prevY = y0;
        for(let i=1;i<=steps;i++){
          const t = i/steps;
          const nx = prevX + (x1 - prevX) * t + rand(-40,40);
          const ny = prevY + (y1 - prevY) * t + rand(-30,30);
          segs.push([nx, ny]);
        }
        return segs;
      }

      // draw single bolt with glow
      function drawBolt(b){
        ctx.save();
        // main bright core
        ctx.lineWidth = 1.6;
        ctx.strokeStyle = 'rgba(255,255,255,0.95)';
        ctx.beginPath();
        ctx.moveTo(b.x0, b.y0);
        b.branches.forEach(p => ctx.lineTo(p[0], p[1]));
        ctx.stroke();

        // purple glow
        ctx.lineWidth = 6;
        ctx.strokeStyle = 'rgba(182,108,255,0.18)';
        ctx.beginPath();
        ctx.moveTo(b.x0, b.y0);
        b.branches.forEach(p => ctx.lineTo(p[0]+rand(-6,6), p[1]+rand(-6,6)));
        ctx.stroke();

        // faint wider glow
        ctx.lineWidth = 12;
        ctx.strokeStyle = 'rgba(198,140,255,0.06)';
        ctx.beginPath();
        ctx.moveTo(b.x0, b.y0);
        b.branches.forEach(p => ctx.lineTo(p[0]+rand(-10,10), p[1]+rand(-10,10)));
        ctx.stroke();

        // tiny sparks at ends
        const last = b.branches[b.branches.length-1];
        ctx.fillStyle = 'rgba(255,245,255,0.85)';
        ctx.beginPath();
        ctx.arc(last[0]+rand(-8,8), last[1]+rand(-6,6), 2.2, 0, Math.PI*2);
        ctx.fill();

        ctx.restore();
      }

      function step(now){
        ctx.clearRect(0,0,w,h);
        // occasionally create bolts
        if(Math.random() < 0.04) createBolt();
        // fade overlay for slight trails
        ctx.fillStyle = 'rgba(6,2,18,0.08)';
        ctx.fillRect(0,0,w,h);

        // draw bolts
        for(let i = bolts.length - 1; i >= 0; i--){
          const b = bolts[i];
          const age = now - b.t;
          const prog = age / b.life;
          if(prog > 1.0) {
            bolts.splice(i,1);
            continue;
          }
          // pulsate opacity: bright early then dim
          ctx.globalAlpha = 1 - prog;
          drawBolt(b);

          // occasional branch flashes
          if(Math.random() < 0.02){
            // draw a tiny branching line
            ctx.save();
            ctx.globalCompositeOperation = 'lighter';
            ctx.strokeStyle = 'rgba(255,255,255,0.9)';
            ctx.lineWidth = 0.9;
            ctx.beginPath();
            const bp = b.branches[Math.floor(rand(1,b.branches.length))];
            ctx.moveTo(bp[0], bp[1]);
            ctx.lineTo(bp[0] + rand(-40,40), bp[1] + rand(-40,40));
            ctx.stroke();
            ctx.restore();
          }
        }
        ctx.globalAlpha = 1;
        requestAnimationFrame(step);
      }

      // resize handling
      function resize(){
        w = canvas.width = innerWidth;
        h = canvas.height = innerHeight;
        const dpr = Math.min(2, window.devicePixelRatio || 1);
        canvas.width = Math.floor(w * dpr);
        canvas.height = Math.floor(h * dpr);
        canvas.style.width = w + 'px';
        canvas.style.height = h + 'px';
        ctx.scale(dpr, dpr);
      }
      window.addEventListener('resize', function(){
        // small debounce
        setTimeout(function(){
          resize();
        }, 80);
      });

      // If reduced motion is requested, disable animation
      const mq = window.matchMedia('(prefers-reduced-motion: reduce)');
      if (mq && mq.matches) {
        canvas.style.display = 'none';
      } else {
        requestAnimationFrame(step);
      }
    })();
  </script>
</body>
